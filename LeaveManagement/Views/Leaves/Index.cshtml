            $('#end').val("");
            var st = $('#start').val();
            $("#end").attr("min", st);
        });

        $("#end").keyup(function () {

            var st = $('#start').val();
            if (st != undefined && st != "") {
                if (st > $("#end").val()) { $("#end").val(st); }
            }
        });
        $('#end').click(function () {

            var st = $('#start').val();
            if (st != undefined && st != "") {
                if (st > $("#end").val()) { $("#end").val(st); }

            }
        });

        AllList(0, 0, "");
        var d = new Date();
        AllCustomList();
    });

    function ExportExcel() {

        //$('#cookieValue').val(Date.now().toString());
        //console.log($('#cookieValue').val(Date.now().toString()));

        //$('.lds-wrapper').show();
