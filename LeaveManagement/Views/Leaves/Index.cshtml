    function AllList(DeptID, EmpID, MonthSelected) {

        $('.lds-wrapper').show();
        $.ajax(
            {
                type: 'GET',
                //dataType: 'JSON',
                url: '/Leaves/EmployeDataTable?DeptID=' + DeptID + '&EmpID=' + EmpID + '&MnthSelected=' + MonthSelected,
                success: function (response) {
                    $('.lds-wrapper').hide();
                    $('.EmpTableList').append(response);
                    $('#emp-leaves-list').DataTable({
                        "ordering": false,
                        columnDefs: [
                            {
                                targets: [0, 1, 2],
                                className: 'mdl-data-table__cell--non-numeric'
                            }
                        ]
                    });
                }
            });
    }

    function DepartmentFilter(DepId) {

        var EmpID = $('#Employee').val();
        $.ajax(
            {
                type: 'GET',
                //dataType: 'JSON',
                url: '/Leaves/DepartmentFilter?DeptID=' + DepId,
                success: function (response) {
                    console.log(response);
                    $("#Employee").find('option').remove();
                    $("#Employee").append($("<option></option>").val("0").html("Select Employee"));
                    $.each(response.empList, function (key, value) {
                        //$("#Employee").empty();
                        $("#Employee").append($("<option></option>").val(value.id).html(value.emp_id));
                    });
                    //$('.EmpTableList').empty();
                    //$('.EmpTableList').append(response.employeDeatils);

                }
            });

    }

    function EmployeeFilter(EmpId) {
        var DeptID = $('#Department').val();
        $.ajax(
            {
                type: 'GET',
                //dataType: 'JSON',
                url: '/Leaves/EmployeDataTable?DeptID=' + DeptID + '&EmpID=' + EmpId,
                success: function (response) {
                    console.log(response);
                }
            });
    }
    function ClearFilter() {
        $('#Department').val(0);
        $('#Employee').val(0);
        $('.EmpTableList').empty();

        AllList(0, 0, "");
    }

    function AddFilter() {
        var EmpID = $('#Employee').val();
        var DeptID = $('#Department').val();
        var MonthSelected = $('#MonthlyReportFilter').val();
        $('.EmpTableList').empty();
        $('#HeadingArea').empty();
        $('#HeadingArea').append(MonthSelected);
        AllList(DeptID, EmpID, MonthSelected);
    }

    function AllCustomList() {
        var First = 1;
        //$('.lds-wrapper').show();
        var StartDate = $('#start').val();
        var EndDate = $('#end').val();
        var departmentCustom = $('#DepartmentCustom').val();
        var employeeCustom = $('#EmployeeCustom').val();
        if ((StartDate == undefined && EndDate == undefined) || (StartDate == "" && EndDate == "")) {
            First = 2;
        }
        if (First == 1) {
            $('.lds-wrapper').show();
            if (StartDate == undefined || EndDate == undefined || StartDate == "" || EndDate == "") {
                $('.lds-wrapper').hide();
                alert("Please select Start Date and End Date!");
                return;
            }
        }


        if (StartDate == undefined) {
            StartDate = null;
        }
        if (EndDate == undefined) {
            EndDate = null;
        }
        $.ajax(
            {
                type: 'GET',
                //dataType: 'JSON',
                url: '/Leaves/CustomDataTable?StartDate=' + StartDate + '&EndDate=' + EndDate + '&DeptID=' + departmentCustom + '&EmpID=' + employeeCustom,
                success: function (response) {
                    if (First == 1) { $('.lds-wrapper').hide(); }
                    //$('.lds-wrapper').hide();
                    $('.CustomTableList').empty();
                    $('.CustomTableList').append(response);
                    $('#customReport').DataTable({
                        "ordering": false,
                        columnDefs: [
                            {
                                targets: [0, 1, 2],
                                className: 'mdl-data-table__cell--non-numeric'
                            }
                        ]
                    });
                }
            });
    }

    function CustomExportToExcel() {
        $('.lds-wrapper').show();
        var First = 1;

        var StartDate = $('#start').val();
        var EndDate = $('#end').val();

        var departmentCustom = $('#DepartmentCustom').val();
        var employeeCustom = $('#EmployeeCustom').val();
        if ((StartDate == undefined && EndDate == undefined) || (StartDate == "" && EndDate == "")) {
            First = 2;
        }

        if (First == 1) {
            if (StartDate == undefined || EndDate == undefined || StartDate == "" || EndDate == "") {
                $('.lds-wrapper').hide();
                alert("Please Start Date and End Date!");
                return;
            }
        }
        if (StartDate == undefined) {
            StartDate = null;
        }
        if (EndDate == undefined) {
            EndDate = null;
        }
        //var EmpID = $('#Employee').val();
        //var DeptID = $('#Department').val();
        let url = '/Leaves/DownloadCustomReport?StartDate=' + StartDate + '&EndDate=' + EndDate + '&DeptID=' + departmentCustom + '&EmpID=' + employeeCustom;
        //window.location = url;
        window.open(url, '_blank');
        $('.lds-wrapper').hide();
    }

    function AddDateFilter() {
        AllCustomList();
    }
    function ClearDateFilter() {
        $('#start').val("");
        $('#end').val("");
        $('#end').removeAttr("min");
        $('#DepartmentCustom').val(0);
        $('#EmployeeCustom').val(0);
        AllCustomList();
    }


    function DepartmentFilterForCustom(DepId) {

        var EmpID = $('#EmployeeCustom').val();
        $.ajax(
            {
                type: 'GET',
                //dataType: 'JSON',
                url: '/Leaves/DepartmentFilter?DeptID=' + DepId,
                success: function (response) {
                    console.log(response);
                    $("#EmployeeCustom").find('option').remove();
                    $("#EmployeeCustom").append($("<option></option>").val("0").html("Select Employee"));
                    $.each(response.empList, function (key, value) {
                        //$("#Employee").empty();
                        $("#EmployeeCustom").append($("<option></option>").val(value.id).html(value.emp_id));
                    });
                    //$('.EmpTableList').empty();
                    //$('.EmpTableList').append(response.employeDeatils);

                }
            });

    }

    function EmployeeFilterForCustom(EmpId) {
        var DeptID = $('#DepartmentCustom').val();
        $.ajax(
            {
                type: 'GET',
                //dataType: 'JSON',
                url: '/Leaves/EmployeDataTable?DeptID=' + DeptID + '&EmpID=' + EmpId,
                success: function (response) {
                    console.log(response);
                }
            });
    }
</script>

